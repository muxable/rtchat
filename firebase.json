{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" install && npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": {
    "public": "build/web",
    "predeploy": "flutter build web",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
