{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" ci && npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/auth/**",
        "function": "auth"
      },
      {
        "source": "/api/send",
        "function": "send"
      },
      {
        "source": "/api/subscribe",
        "function": "subscribe"
      },
      {
        "source": "/api/metadata",
        "function": "metadata"
      },
      {
        "source": "/embed",
        "function": "embedRedirect"
      }
    ]
  }
}
